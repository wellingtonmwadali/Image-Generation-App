#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/-S" ]; then
  "$basedir/-S" NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"' node "$basedir/../toast/toast-cli.mjs" "$@"
  ret=$?
else 
  -S NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"' node "$basedir/../toast/toast-cli.mjs" "$@"
  ret=$?
fi
exit $ret
